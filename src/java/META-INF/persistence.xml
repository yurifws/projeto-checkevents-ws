<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="CheckEventsWSPU" transaction-type="JTA">
    <jta-data-source>java:app/checkeventsws</jta-data-source>
    <class>br.com.novaroma.checkevents.entities.Contato</class>
    <class>br.com.novaroma.checkevents.entities.Endereco</class>
    <class>br.com.novaroma.checkevents.entities.Evento</class>
    <class>br.com.novaroma.checkevents.entities.Localizacao</class>
    <class>br.com.novaroma.checkevents.entities.TipoEvento</class>
    <class>br.com.novaroma.checkevents.entities.Usuario</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
